[Unit]
Description=Dymension Dymd service
After=network-online.target
[Service]
User={{node_user}}
ExecStart={{chain_bin}} start --home {{chain_home}}
Restart=always
RestartSec=3
LimitNOFILE=4096
Environment='DAEMON_NAME=dymd'
Environment='DAEMON_HOME={{chain_home}}'

[Install]
WantedBy=multi-user.target